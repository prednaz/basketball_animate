{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {"vars": "local"}
        ]
    },
    "globals": {
        "basketball_animate": "readonly",
        "svg_animate": "readonly",
        "TweenMax": "readonly",
        "TimelineMax": "readonly",
        "Power0": "readonly",
        "Power1": "readonly",
        "$": "readonly",
        "Snap": "readonly",
        "TweenLite": "readonly"
    }
}
